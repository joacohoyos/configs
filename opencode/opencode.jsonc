{
  "$schema": "https://opencode.ai/config.json",
  // Theme configuration
  "theme": "catppuccin",
  "model": "anthropic/claude-sonnet-4-20250514",
  "autoupdate": true,
  "keybinds": {
    "session_child_cycle": "<leader>j",
    "session_child_cycle_reverse": "<leader>k"
  },
  "mcp": {
    "linear": {
      "type": "local",
      "enabled": true,
      "command": [
        "nlx",
        "mcp-remote",
        "https://mcp.linear.app/sse"
      ],
    },
    "context7": {
      "type": "local",
      "enabled": true,
      "command": [
        "nlx",
        "@upstash/context7-mcp@latest"
      ],
    },
    "sequential-thinking": {
      "type": "local",
      "enabled": true,
      "command": [
        "nlx",
        "@modelcontextprotocol/server-sequential-thinking@latest"
      ]
    },
    "shadcn-mcp": {
      "type": "local",
      "enabled": true,
      "command": [
        "nlx",
        "mcp-remote",
        "https://www.shadcn.io/api/mcp"
      ]
    }
  }
}
