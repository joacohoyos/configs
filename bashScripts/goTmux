
#!/usr/bin/env bash

PERSONAL="~"
DIPPER="~/dipper"

createWindow() {
    session=$1
    window=$2
    shift
    shift
    hasWindow=$(tmux list-windows -t $session | grep "$window")
    if [ -z "$hasWindow" ]; then
        cmd="tmux neww -t $session: -n $window -d"
        if [ $# -gt 0 ]; then
            cmd="$cmd $@"
        fi
        echo "Creating Window(\"$hasWindow\"): $cmd"
        eval $cmd
    fi
}

createSession() {
    session=$1
    window=$2
    shift
    shift
    cmd="tmux new -s $session -d -n $window $@ > /dev/null 2>&1"

    echo "Creating Session: $cmd"
    eval $cmd
}

while [ "$#" -gt 0 ]; do
    curr=$1
    shift

    case "$curr" in
    "-dipper")
        createSession dipper app -c $DIPPER/app "ranger"
        createWindow dipper api -c $DIPPER/api "ranger"
        createWindow dipper run-app -c $DIPPER/app "npm start"
        createWindow dipper run-api -c $DIPPER/api "docker-compose -f docker/docker-compose.yaml up --build"
        ;;
    "-personal")
        createSession personal console 
        createWindow personal ranger -c $PERSONAL "ranger"
        ;;
    *) echo "Unavailable command... $curr"
    esac
done
