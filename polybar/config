[bar/dp1]
inherit = bar/main
enable-ipc = true

monitor = DP-1

height = 30
modules-left = logo i3 
modules-center = xwindow
modules-right =  pulseaudio xkeyboard spotify spotify-prev spotify-play-pause spotify-next date

padding-left = 0
padding-right = 2

tray-position = right
tray-padding = 2
tray-background = ${colors.background}

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true


cursor-click = pointer
cursor-scroll = ns-resize


